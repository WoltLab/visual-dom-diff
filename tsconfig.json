{
  "compilerOptions": {
    "target": "ES2022",
    "module": "AMD",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES2022"
    ],
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./lib",
    "preserveConstEnums": true,
    "importHelpers": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true
  },
  "exclude": [
    "./src/*.test.ts"
  ]
}
